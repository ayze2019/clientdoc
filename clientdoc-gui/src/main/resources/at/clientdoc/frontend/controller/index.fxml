<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox id="vbox" maxWidth="Infinity"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="at.clientdoc.frontend.controller.IndexController">
    <MenuBar>
        <Menu text="%index.menubar.profil">
            <SeparatorMenuItem/>
            <MenuItem text="Exit"/>
        </Menu>
        <Menu text="%index.menubar.klient">
            <MenuItem text="%index.menu.new.button" onAction="#openAddNewKlientIn"/>
            <MenuItem text="%index.menu.search.button" onAction="#openSearchNewKlientIn"/>
        </Menu>
        <Menu text="%index.menubar.help">
            <MenuItem text="%index.menu.search.about"/>
        </Menu>
    </MenuBar>

    <StackPane id="StackPane">
        <AnchorPane fx:id="newEntryKlientIn" visible="false" maxWidth="Infinity">
            <fx:include source="newEntryKlientIn.fxml"/>
        </AnchorPane>
        <AnchorPane fx:id="searchKlientInTable" visible="false">
            <fx:include source="searchKlientIn.fxml"/>
        </AnchorPane>
    </StackPane>
</VBox>
